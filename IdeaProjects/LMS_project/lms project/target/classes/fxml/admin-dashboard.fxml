<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminController">
    <top>
        <VBox style="-fx-background-color: #c0392b;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome, Admin" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="workingHoursLabel" text="Working Hours: 0" textFill="WHITE">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
                    </children>
                </HBox>

                <!-- Statistics Bar -->
                <HBox alignment="CENTER" spacing="40.0" style="-fx-background-color: #a93226;">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <Label fx:id="totalCoursesLabel" text="Total Courses: 0" textFill="WHITE">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalInstructorsLabel" text="Total Instructors: 0" textFill="WHITE">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="totalStudentsLabel" text="Total Students: 0" textFill="WHITE">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <HBox>
            <children>
                <!-- Main Content Area -->
                <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                    </padding>
                    <children>
                        <!-- Action Buttons -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleRefreshData" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 120;" text="Refresh Data" />
                                <Button mnemonicParsing="false" onAction="#handleSystemReport" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-pref-width: 120;" text="System Report" />
                            </children>
                        </HBox>

                        <!-- All Courses Section -->
                        <VBox spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="All Courses" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="deleteCourseButton" mnemonicParsing="false" onAction="#handleDeleteCourse" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete Course" />
                                        <Button fx:id="viewCourseDetailsButton" mnemonicParsing="false" onAction="#handleViewCourseDetails" style="-fx-background-color: #34495e; -fx-text-fill: white;" text="View Details" />
                                    </children>
                                </HBox>
                                <TableView fx:id="allCoursesTable" prefHeight="180.0" />
                            </children>
                        </VBox>

                        <!-- Instructors Section -->
                        <VBox spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="All Instructors" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="viewInstructorDetailsButton" mnemonicParsing="false" onAction="#handleViewInstructorDetails" style="-fx-background-color: #8e44ad; -fx-text-fill: white;" text="View Details" />
                                    </children>
                                </HBox>
                                <TableView fx:id="instructorsTable" prefHeight="180.0" />
                            </children>
                        </VBox>

                        <!-- Students Section -->
                        <VBox spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="All Students" textFill="#2c3e50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="viewStudentDetailsButton" mnemonicParsing="false" onAction="#handleViewStudentDetails" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="View Details" />
                                    </children>
                                </HBox>
                                <TableView fx:id="studentsTable" prefHeight="180.0" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Profile Sidebar -->
                <VBox prefWidth="320.0" spacing="10.0" style="-fx-background-color: #ecf0f1;">
                    <padding>
                        <Insets bottom="20.0" left="15.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="System Overview" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="profileArea" editable="false" prefHeight="500.0" style="-fx-background-color: white;" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
