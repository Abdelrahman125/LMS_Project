<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f0f0;">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <children>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Learning Management System" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Ain Shams University" textFill="#34495e">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <Label text="Login" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="Username:" />
                                <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-height: 35;" />
                            </children>
                        </VBox>

                        <VBox spacing="10.0">
                            <children>
                                <Label text="Password:" />
                                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-height: 35;" />
                            </children>
                        </VBox>

                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Login" />

                        <Label fx:id="errorLabel" textFill="RED" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
