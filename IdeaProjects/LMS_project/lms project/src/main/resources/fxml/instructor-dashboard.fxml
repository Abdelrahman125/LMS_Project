<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.InstructorController">
    <top>
        <VBox style="-fx-background-color: #8e44ad;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </padding>
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome, Instructor" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="specializationLabel" text="Specialization: " textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="earningsLabel" text="Earnings: $0.00" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="teachingCoursesLabel" text="Teaching Courses: 0" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <HBox>
            <children>
                <!-- Main Content Area -->
                <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                    </padding>
                    <children>
                        <!-- Action Buttons -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Button fx:id="createCourseButton" mnemonicParsing="false" onAction="#handleCreateCourse" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 150;" text="Create Course" />
                                <Button fx:id="createAssignmentButton" mnemonicParsing="false" onAction="#handleCreateAssignment" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-pref-width: 150;" text="Create Assignment" />
                            </children>
                        </HBox>

                        <!-- My Courses Section -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="My Courses" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="myCoursesTable" prefHeight="180.0" />
                            </children>
                        </VBox>

                        <!-- Students Section -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="My Students" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="studentsTable" prefHeight="180.0" />
                            </children>
                        </VBox>

                        <!-- Assignments Section -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="My Assignments" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="assignmentsTable" prefHeight="180.0" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Profile Sidebar -->
                <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #ecf0f1;">
                    <padding>
                        <Insets bottom="20.0" left="15.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Profile Information" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="profileArea" editable="false" prefHeight="400.0" style="-fx-background-color: white;" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>
